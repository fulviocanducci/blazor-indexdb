@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick=@(IncrementCountAsync())>Click me</button>

@code {
    int currentCount = 0;

    async Task IncrementCountAsync()
    {
        currentCount++;
        await Task.CompletedTask;
    }
}
